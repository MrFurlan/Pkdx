<?xml version="1.0" encoding="utf-8"?>
<FrameLayout
    android:id="@+id/generations_container"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.GenActivity">

    <LinearLayout
        android:id="@+id/gen_buttons_container"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/bg_gen"
        android:orientation="vertical"
        android:paddingBottom="@dimen/activity_vertical_margin"
        android:paddingLeft="@dimen/gen_activity_side_padding"
        android:paddingRight="@dimen/gen_activity_side_padding"
        android:paddingTop="@dimen/activity_vertical_margin">

        <Button
            android:id="@+id/button_gen_i"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_weight="1"
            android:onClick="launchPokeList"
            android:stateListAnimator="@null"
            android:text="Gen I"/>

        <Button
            android:id="@+id/button_gen_ii"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_weight="1"
            android:onClick="launchPokeList"
            android:stateListAnimator="@null"
            android:text="Gen II"/>

        <Button
            android:id="@+id/button_gen_iii"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_weight="1"
            android:onClick="launchPokeList"
            android:stateListAnimator="@null"
            android:text="Gen III"/>

        <Button
            android:id="@+id/button_gen_iv"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_weight="1"
            android:onClick="launchPokeList"
            android:stateListAnimator="@null"
            android:text="Gen IV"/>

        <Button
            android:id="@+id/button_gen_v"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_weight="1"
            android:onClick="launchPokeList"
            android:stateListAnimator="@null"
            android:text="Gen V"/>

        <Button
            android:id="@+id/button_gen_vi"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_weight="1"
            android:onClick="launchPokeList"
            android:stateListAnimator="@null"
            android:text="Gen VI"/>
    </LinearLayout>
</FrameLayout>
